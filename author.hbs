{{!< default}}

{{#author}}
<div class="author-info bordered">
    {{#if profile_image}}
        <img class="author-profile-image" src="{{profile_image}}" alt="{{name}}" loading="lazy" />
    {{/if}}
    <div class="author-meta">
        <h1>{{name}}</h1>
        {{#if bio}}
        <p>{{bio}}</p>
        {{/if}}
    </div>
</div>

<p>Posts by {{name}}:</p>
{{/author}}

<hr>

{{#foreach posts}}
{{> "post-summary"}}
{{/foreach}}

{{pagination}}